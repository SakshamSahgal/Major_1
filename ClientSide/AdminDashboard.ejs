    <!-- Connection to Free Public MQTT Broker by HiveMQ  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mqtt/2.18.7/mqtt.min.js"></script>

<script>
    
    const brokerUrl = "ws://broker.hivemq.com:8000/mqtt"; // Non-secure WebSocket
    const client = mqtt.connect(brokerUrl);

    client.on("connect", function () {
        console.log("Connected to HiveMQ");

        let topic = "truck/dolly1";
        client.subscribe(topic);
    });

    client.on("message", function (topic, message) {
        console.log(`Received message on topic: ${topic}, message: ${message.toString()}`);
    });

</script>